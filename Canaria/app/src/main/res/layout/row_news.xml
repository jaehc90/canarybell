

<LinearLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/news_profile_pic"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_marginLeft ="@dimen/activity_horizontal_margin"
            android:background="@color/bar_color"
            android:src="@drawable/picture2"
            android:visibility="visible"/>
        <TextView
            android:id="@+id/news_profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_alignTop="@id/news_profile_pic"
            android:layout_toRightOf="@id/news_profile_pic"
            android:text="Johny Rocket"
            android:textSize="20dp"
            android:textColor="@color/text_location"
            android:visibility="visible"/>
        <TextView
            android:id="@+id/news_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_alignTop="@id/news_profile_pic"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/label_location"
            android:gravity="right"
            android:text="12:00pm"
            android:textSize="20dp"
            android:textColor="@color/text_location"
            android:visibility="visible"/>
        <TextView
            android:id="@+id/news_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/news_profile_pic"
            android:text="오늘 재미있게 보냈다 오늘 재미있게 보냈다 오늘 재미있게 보냈다 "
            android:textSize="25dp"
            android:textColor="@color/text_location"
            android:visibility="visible"/>
        <ImageView
            android:id="@+id/news_imageView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="5dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/news_text"
            android:gravity="fill_horizontal"
            android:scaleType="centerCrop"
            android:text="오늘 재미있게 보냈다 오늘 재미있게 보냈다 오늘 재미있게 보냈다 오늘 재미있게 보냈다 오늘 재미있게 보냈다"
            android:textSize="20dp"
            android:textColor="@color/text_body"
            android:src="@drawable/preview_pic"
            android:visibility="visible"/>
        <TextView
            android:id="@+id/news_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/news_imageView"
            android:gravity="fill_horizontal"
            android:scaleType="centerCrop"
            android:text="서교동 스타벅스 근처"
            android:textSize="20dp"
            android:textColor="@color/text_body"
            android:src="@drawable/preview_pic"
            android:visibility="visible"/>
    </RelativeLayout>

</LinearLayout>