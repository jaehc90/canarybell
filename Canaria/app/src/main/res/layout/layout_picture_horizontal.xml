<?xml version="1.0" encoding="utf-8"?>



    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:id="@+id/line"
                android:layout_width="4dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="40dp"
                android:background="@color/text_fade_color"
                android:orientation="horizontal"
                android:visibility="gone"/>


            <ImageView
            android:id="@+id/picture_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_marginLeft ="@dimen/activity_horizontal_margin"
            android:background="@color/bar_color"
            android:src="@drawable/preview_pic"
                android:visibility="visible"/>
        <TextView
            android:id="@+id/label_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_alignTop="@id/picture_icon"
            android:layout_toRightOf="@id/picture_icon"
            android:text="서울시 마포구 근처"
            android:textSize="20dp"
            android:textColor="@color/text_location"
            android:visibility="visible"/>
        <TextView
            android:id="@+id/status_list_item_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_alignLeft="@id/label_location"
            android:layout_below="@id/label_location"
            android:text="오늘 재미있게 보냈다 오늘 재미있게 보냈다 오늘 재미있게 보냈다 "
            android:textSize="18dp"
            android:textColor="@color/text_location"
            android:visibility="gone"/>
        <ImageView
            android:id="@+id/status_list_item_img"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="5dp"
            android:layout_alignLeft="@id/status_list_item_text"
            android:layout_below="@id/status_list_item_text"
            android:gravity="fill_horizontal"
            android:scaleType="fitStart"
            android:text="오늘 재미있게 보냈다 오늘 재미있게 보냈다 오늘 재미있게 보냈다 오늘 재미있게 보냈다 오늘 재미있게 보냈다"
            android:textSize="20dp"
            android:textColor="@color/text_body"
            android:src="@drawable/preview_pic"
            android:visibility="visible"/>
    </RelativeLayout>

    </LinearLayout>